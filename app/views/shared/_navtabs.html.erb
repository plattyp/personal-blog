<div class="card">
    <ul class="nav nav-tabs" id="myTab">
        <% case tabcontent %>
        <% when 'Admin' %>
            <%= content_tag :li, link_to("Manage Site", metadata_path), :class => activetab == 'Manage Site' ? 'active' : 'inactive' %>
            <%= content_tag :li, link_to("Manage Categories", categories_path), :class => activetab == 'Manage Categories' ? 'active' : 'inactive' %>
            <%= content_tag :li, link_to("Manage Posts", manageposts_path), :class => activetab == 'Manage Posts' ? 'active' : 'inactive' %>
            <%= content_tag :li, link_to("Manage Projects", manageprojects_path), :class => activetab == 'Manage Projects' ? 'active' : 'inactive' %>
            <% case overridetab %>
            <% when "Create Post" %>
            	<%= content_tag :li, link_to("Create Post", new_post_path), :class => 'active' %>
            <% when "Create Project" %>
                <%= content_tag :li, link_to("Create Project", new_project_path), :class =>'active' %>
            <% when "Update Post" %>
            	<%= content_tag :li, link_to("Update Post", edit_post_path(@post.id)), :class => 'active' %>
            <% when "Update Project" %>
            	<%= content_tag :li, link_to("Update Project", edit_project_path(@project.id)), :class => 'active' %>
            <% when "Update Category" %>
                <%= content_tag :li, link_to("Update Category", edit_category_path(@category.id)), :class => 'active' %>
            <% end %>
        <% when 'Project' %>
        <%= content_tag :li, link_to("Project Info", "#projectinfo", :data => {:toggle => "tab"}), :class => activetab == 'Project Info' ? 'active' : 'inactive' %>
        <%= content_tag :li, link_to("Images", "#projectimages", :data => {:toggle => "tab"}), :class => activetab == 'Images' ? 'active' : 'inactive' %>
        <% end %>
    </ul>
    <div class="tab-content">