<div class="sidebar-nav-fixed affix">
    <div class="card hovercard">
        <%= image_tag "#{@metadata.bannerpic_url}".html_safe, alt: "Cover Photo" %>
        <div class="avatar">
            <%= link_to "#{image_tag(@metadata.profilepic_url)}".html_safe, root_path %>
        </div>
        <div class="info">
            <div class="title">
                <h2><%= @metadata.title %></h2>
            </div>
            <div class="desc"><%= @metadata.description %></div>
        </div>
    </div>
</div>