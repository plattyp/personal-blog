<%= form_for @post, :html => {:multipart => true} do |f| %>
	<div class="row-fluid">
		<div class="span4">
			<%= f.label "Name" %>
			<%= f.text_field :name %>
		</div>
		<div class="span4">
			<%= f.label "Associated Project" %>
			<%= f.select :project_id, @projects, :include_blank => '- No Project -' %>
		</div>
		<div class="span4">
			<%= f.label "Category" %>
			<%= f.select :category_id, @categories %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<%= f.fields_for :images do |i| %>
				<%= i.label "Image" %>
				<%= i.file_field :image %>
			<% end %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<%= f.label "Content" %>
			<%= f.cktext_area :content %>
		</div>
	</div><br />
	<%= f.submit :submit, :class => 'btn' %>
<% end %>