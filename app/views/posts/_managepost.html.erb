<%= form_for(@post) do |f| %>
	<%= f.label "Name" %>
	<%= f.text_field :name %>
	<%= f.label "Content" %>
	<%= f.cktext_area :content %>
	<%= f.label "Associated Project" %>
	<%= f.select :project_id, @projects %>
	<%= f.label "Category" %>
	<%= f.select :category_id, @categories %><br />
	<%= f.submit :submit, :class => 'btn' %>
<% end %>