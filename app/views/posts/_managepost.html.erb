<%= form_for @post, :html => {:multipart => true} do |f| %>
	<div class="row-fluid">
		<div class="span4">
			<%= f.label "Name" %>
			<%= f.text_field :name %>
		</div>
		<div class="span4">
			<%= f.label "Associated Project" %>
			<%= f.select :project_id, @projects, :include_blank => '- No Project -' %>
		</div>
		<div class="span4">
			<%= f.label "Category" %>
			<%= f.select :category_id, @categories %>
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
		</div>
	</div>
	<div class="row-fluid">
		<div class="span12">
			<%= f.label "Content" %>
			<%= f.cktext_area :content %>
		</div>
	</div><br />
	<div class="row-fluid">
		<div class="span12">
			<ul class="nav nav-tabs" id="myTab">
				<%= content_tag :li, link_to("Images","#images"), :class => "active" %>
				<%= content_tag :li, link_to("Upload","#upload") %>
			</ul>
			<div class="tab-content">
				<div class="tab-pane active" id="images">
					<% @post.images.each do |image| %>
						<% if image.id != nil %>
							<%= image_tag(image.image.url(:thumb)) %>
						<% end %>
					<% end %>
				</div>
				<div class="tab-pane" id="upload">
					<%= f.fields_for :images, @post.images.build do |i| %>
							<%= i.label "Image" %>
							<%= i.file_field :image %>
					<% end %>
				</div>
			</div>
		</div>
	</div><br />
	<%= f.submit :submit, :class => 'btn' %>
<% end %>