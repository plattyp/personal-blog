<div class="row-fluid post">
    <div class="span12"> 
        <div class="card">
            <div class="card-heading image">
                <%= link_to "#{image_tag(post.profile_pic.image_url)}".html_safe, post_path(post), :class => "pull-right" %>
                <div class="card-heading-header">
                    <h1><%= link_to post.title, post_path(post) %></h1>
                    <h3>  <span> Published <%= post.created_at %></span>  <span>  By <%= link_to post.user.name, user_path(post.user.id) %>  in  <i class="icon-bookmark muted"> </i>   <%= link_to post.category, posts_path(:category => post.category) %> </span> </h3>
                </div>
            </div>
            <hr>
            <div class="card-body">
                <p><%= post.content %>
                </p>
            </div>

            <div class="card-actions card-comments">
                <button class="btn">+1</button>
                <button class="btn">Share</button>
                <a href="#"> <i class="icon-facebook  muted pull-right"></i> </a>
                <a href="#"> <i class="icon-twitter  muted pull-right"></i> </a>
                <a href="#"> <i class="icon-google-plus  muted pull-right"></i> </a>
            </div>
        </div>
    </div>
</div>