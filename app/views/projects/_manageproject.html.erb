<%= form_for(@project) do |f| %>
	<%= f.label "Name" %>
	<%= f.text_field :name %>
	<%= f.label "Tagline" %>
	<%= f.text_field :snippet %>
	<%= f.label "Project Description" %>
	<%= f.text_area :description, :class => 'largertextarea' %>
	<%= f.label "Languages" %>
  <%= fields_for(@project_language) do |c| %>
    <%= collection_select(:project_language, :language_id, @languages, :id, :name, {:selected => @project.languages.map{|l| l.id}}, { :multiple => true} ) %>
  <% end %>
	<%= f.label "Keywords for Metadata" %>
	<%= f.text_area :keywords, :class => 'largertextarea' %>
	<%= f.label "Website URL" %>
	<%= f.url_field :url %>
	<%= f.label "Appstore URL" %>
	<%= f.url_field :appstore_url %>
	<%= f.label "Github URL" %>
	<%= f.url_field :github_url %>
	<%= f.label "Is Visible?" %>
	<%= f.check_box :visible %><br /><br />
	<%= render partial: "manageimages", locals: {object: @project, f: f} %><br />
	<%= f.submit :submit, :class => 'btn' %>
<% end %>
