<%= render partial: 'shared/navtabs', :locals => {:tabcontent => 'Admin', :activetab => 'Manage Projects', :overridetab => nil} %>
	<div class="admincontainer">
		<table class="table">
			<tr>
				<td>Name</td>
				<td>Github Url</td>
				<td>Visible?</td>
				<td>Actions</td>
			</tr>
			<% @projects.each do |p| %>
				<tr>
					<td><%= p.name %></td>
					<td><%= p.github_url %></td>
					<td><%= p.visible ? "Yes" : "No" %></td>
					<td><%= link_to "Edit", edit_project_path(p.id) %> | 
					<%= link_to "Delete", project_path(p.id), :method => :destroy %></td>
				</tr>
			<% end %>
		</table><br />
		<%= button_to "New Project", new_project_path, :class => 'btn', :method => "get" %>
	</div>
<%= render partial: 'shared/tabfooter' %>