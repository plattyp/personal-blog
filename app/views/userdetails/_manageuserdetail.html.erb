<%= form_for [@user, @userdetail] do |f| %>
	<%= image_tag(@userdetail.images.first.image.url(:thumb)) if @userdetail.has_profilepic? %>
	<%= f.fields_for :images, @userdetail.images.build do |i| %>
		<%= i.label "Replace Profile Picture" %>
		<%= i.file_field :image %>
	<% end %>
	<%= f.label "Github URL"%>
	<%= f.url_field :github_url %>
	<%= f.label "Linkedin URL"%>
	<%= f.url_field :linkedin_url %>
	<%= f.label "Allow Messages (email)" %>
	<%= f.check_box :allowmessages %>
	<%= f.label "Description" %>
	<%= f.text_area :description, :class => "redactor" %><br />
	<%= f.label "Education" %>
	<%= f.text_area :education, :class => "redactor" %><br />
	<%= f.label "Work Experience" %>
	<%= f.text_area :workexperience, :class => "redactor" %><br />
	<%= f.label "Hobbies" %>
	<%= f.text_area :hobbies, :class => "redactor" %><br />
	<%= f.submit :submit, :class => 'btn' %>
<% end %>

<%= link_to "Edit Account", edit_user_registration_path %><br />